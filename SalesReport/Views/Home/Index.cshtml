@using System.Web.Optimization
@model SalesReport.ViewModels.ReportSettingsViewModel

@{
    ViewBag.Title = "Report constructor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles
{
    @Styles.Render("~/Content/bootstrap-datetimepicker")
}

<h2>Report constructor</h2>

<div class="row">
    <div class="col-md-3">
        @using (Html.BeginForm("SendReportByEmail", "Home"))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.StartDate)
                <div class="input-group date datetimepicker">
                    @Html.TextBoxFor(model => model.StartDate, new {@class = "form-control"})
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.EndDate)
                <div class="input-group date datetimepicker">
                    @Html.TextBoxFor(model => model.EndDate, new { @class = "form-control" })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RecipientEmail)
                @Html.TextBoxFor(model => model.RecipientEmail, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.RecipientEmail)
            </div>

            <div class="form-group">
                @Html.ActionLink("Download full report", "DownloadReport")
            </div>

            <input type="submit" value="Send report" class="btn btn-primary"/>
        }
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/Scripts/moment")
    @Scripts.Render("~/Scripts/bootstrap-datetimepicker")
    <script type="text/javascript">
      $('.datetimepicker').datetimepicker({
      });
    </script>
}